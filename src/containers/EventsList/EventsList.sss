.EventsList
  width: 100%
  max-width: 1000px
  position: relative
  margin-top: 40px

  .background
    position: absolute
    width: 100%
    height: 100%

    background: #fff
    border-radius: 5px
    box-shadow: 0 2px 4px 0 rgba(230, 230, 230, 1)

  .header
    position: relative
    min-height: 55px

    display: flex
    flex-flow: column nowrap
    justify-content: center
    align-items: center

    border-bottom: 1px solid #E5E5E5
    text-align: center

    .title
      text-align: center
      font-size: 20px


  .content
    position: relative
    width: 100%
    padding: 50px
    padding-top: 20px

    .loader
      margin: 30px auto
      display: flex
      justify-content: center

    .caption-not-found
      margin-top: 30px
      font-size: 18px
      text-align: center